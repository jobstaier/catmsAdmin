{% extends 'CatMSAdminBundle::cutBase.html.twig' %}

{% block content %}
<form class="form-horizontal" action="{{ path('login_check') }}" method="post" style="width: 248px; margin: 20px auto">
    <div class="control-group">
        <div class="input-prepend">
            <span class="add-on"><i class="icon-user"></i></span>
            <input style="width: 206px;" class="span2" id="prependedInput" type="text" placeholder="{{ 'user.username' | trans }}" name="_username">
        </div>
    </div>
    <div class="control-group">
        <div class="input-prepend">
            <span class="add-on"><i class="icon-asterisk"></i></span>
            <input type="password" id="password" placeholder="{{ 'auth.password' | trans }}" name="_password">
        </div>
    </div>

    <div class="control-group">
        
        <div class="controls" style="margin: 0">
            
            <label class="checkbox" style="display: inline-block; margin-right: 9px;">
                <input type="checkbox" id="remember_me" name="_remember_me" checked>{{ 'auth.keepMeLoggedIn' | trans }}
            </label>
            <button style="float: right" type="submit" class="btn btn-primary">{{ 'auth.login' | trans }}</button><br/>

            <a href="#forgetPw" data-toggle="modal" data-target="#forgetPw">{{ 'auth.forgetPassword' | trans }}</a>
            {% include 'CatMSAdminBundle:Helpers:modal.html.twig' with {'id': 'forgetPw', 'msg': 'auth.generateNewPassword' | trans, 'btnTxt': 'global.generate' | trans , 'href': 'generate-new-password'} %}
        </div>    
        
    </div>
</form>
{% endblock %}