<!-- Modal -->
{% if btnTxt is not defined %}
    {% set btnTxt = 'global.saveChanges'%}
{% endif %}

{% if content is not defined %}
    {% set content = 'global.areYouSure' | trans %}
{% endif %}


{% if form is not defined %}

    <div id="{{ id }}" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h3 id="myModalLabel">{{ msg }}</h3>
        </div>
        <div class="modal-body">
            {{ content }}
        </div>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">{{ 'global.close' | trans }}</button>

            {% if href is defined %}
                <a href="{{ href }}" class="btn btn-primary show-loader" data-loading-text="{{ 'global.loading' | trans }}">{{ btnTxt }}</a>
            {% else %}
                <button class="btn btn-primary show-loader" data-loading-text="{{ 'global.loading' | trans }}">{{ btnTxt }}</button>
            {% endif %}
        </div>
    </div>

{% else %}

    <div id="{{ id }}" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h3 id="myModalLabel">{{ msg }}</h3>
        </div>
        <div class="modal-body">
            {{ content }}
        </div>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
            <a href="{{ href }}" class="btn btn-primary show-loader confirm" data-loading-text="{{ 'global.loading' | trans }}">{{ btnTxt }}</a>
        </div>
    </div>

{% endif %}