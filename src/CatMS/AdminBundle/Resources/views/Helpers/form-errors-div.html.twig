{% form_theme form _self %}    
{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
            {% for error in errors %}
                <div class="error-tooltip alert alert-error">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <i class="icon-remove-circle"></i> <small>{{ error.message | trans }}</small> 
                </div>
            {% endfor %}
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}
