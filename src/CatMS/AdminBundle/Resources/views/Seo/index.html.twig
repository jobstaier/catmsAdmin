{% extends 'CatMSAdminBundle::base.html.twig' %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="active">SEO manager</li>
{% endblock %}
    
{% block content -%}
    <legend>
        <i class="icon-large icon-globe"></i> Seo pages list
    </legend>

    {% if entities | length > 0 %}
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th width=30>Id</th>
                <th>Slug</th>
                <th>Page Title</th>
                <th>Meta Description</th>
                <th>Meta Keywords</th>
                <th  width=90>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('seo-show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.slug }}</td>
                <td>{{ entity.pageTitle }}</td>
                <td>{{ entity.metaDescription }}</td>
                <td>{{ entity.metaKeywords }}</td>
                <td>
                    <div class="btn-group">
                        <button class="btn">Action</button>
                        <button class="btn dropdown-toggle" data-toggle="dropdown">
                            <span class="caret"></span>
                        </button>

                        <ul class="dropdown-menu">
                            <li>
                                <a href="{{ path('seo-show', {'id': entity.id }) }}"><i class="icon-fullscreen"></i> Show</a>
                            </li>
                            <li>
                                <a href="{{ path('seo-edit', {'id': entity.id }) }}"><i class="icon-edit"></i> Edit</a>
                            </li>
                        </ul>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% else %}
    <div class="alert">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <strong>Empty databse!</strong> No records defined
    </div>
    {% endif %}
    
    <hr />
    
    <div class="btn-group">
        <a href="{{ path('seo-new') }}" class="btn"><i class="icon-pencil"></i> Create new SEO page</a>
    </div>
    {% endblock %}
