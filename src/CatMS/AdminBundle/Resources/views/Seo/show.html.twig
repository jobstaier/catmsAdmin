{% extends 'CatMSAdminBundle::base.html.twig' %}

{% block breadcrumb %}
    {{ parent() }}
    <li><a href="{{ path('seo') }}">{{ 'seo.pagesList' | trans }}</a></li> <span class="divider">/</span>
    <li class="active">{{ 'global.page' | trans }} <i>{{ entity.slug }}</i> SEO</li>
{% endblock %}
    
{% block content -%}
    <legend><i class="icon-large icon-globe"></i> {{ 'global.page' | trans }} <i>{{ entity.slug }}</i> SEO</legend>

    <table class="table table-striped table-hover table-bordered">
        <tbody>
            <tr>
                <th width=200>ID</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ entity.slug }}</td>
            </tr>
            <tr>
                <th>Page Title</th>
                <td>{{ entity.pageTitle }}</td>
            </tr>
            <tr>
                <th>Meta Description</th>
                <td>{{ entity.metaDescription }}</td>
            </tr>
            <tr>
                <th>Meta Keywords</th>
                <td>{{ entity.metaKeywords }}</td>
            </tr>
            <tr>
                <th>Create Date</th>
                <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

    <div style="margin-bottom: 10px">
        <a href="{{ path('seo') }}" class="btn btn-small"><i class="icon-list"></i> {{ 'global.backToTheList' | trans }}</a>
        <a href="{{ path('seo-edit', { 'id': entity.id }) }}"class="btn btn-primary btn-small"><i class="icon-edit"></i> {{ 'global.edit' | trans }}</a>
    </div>

    <form action="{{ path('seo-delete', { 'id': entity.id }) }}" method="post">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
        <button type="submit" data-view="top" class="btn btn-small btn-warning remove-this-form"><i class="icon-trash"></i> {{ 'global.delete' | trans }}</button>
    </form>
    
{% endblock %}
