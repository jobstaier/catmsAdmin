{% extends 'CatMSAdminBundle::base.html.twig' %}

{% block breadcrumb %}
    {{ parent() }}
    <li><a href="{{ path('seo') }}">SEO manager</a></li> <span class="divider">/</span>
    <li class="active">Page {{ entity.slug }} SEO</li>
{% endblock %}
    
{% block content -%}
    <legend><i class="icon-large icon-globe"></i> Page <i>{{ entity.slug }}</i> SEO</legend>

    <table class="table table-striped table-hover table-bordered">
        <tbody>
            <tr>
                <th width=200>ID</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ entity.slug }}</td>
            </tr>
            <tr>
                <th>Page Title</th>
                <td>{{ entity.pageTitle }}</td>
            </tr>
            <tr>
                <th>Meta Description</th>
                <td>{{ entity.metaDescription }}</td>
            </tr>
            <tr>
                <th>Meta Keywords</th>
                <td>{{ entity.metaKeywords }}</td>
            </tr>
            <tr>
                <th>Create Date</th>
                <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

    <div class="btn-group" style="margin-bottom: 10px">
        <a href="{{ path('seo') }}" class="btn"><i class="icon-list"></i> Back to the list</a>
        <a href="{{ path('seo-edit', { 'id': entity.id }) }}"class="btn"><i class="icon-edit"></i> Edit</a>
    </div>

    <form action="{{ path('seo-delete', { 'id': entity.id }) }}" method="post">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
        <button type="submit" class="btn" data-toggle="modal" data-target="#delete"><i class="icon-trash"></i> Delete</button>
        {% include 'CatMSAdminBundle:Helpers:modal.html.twig' with {'id': 'delete', 'msg': 'Delete SEO page', 'btnTxt': 'Delete'} %}
    </form>
    
{% endblock %}
